{
    "manifest_version": 2,
    "name": "word.ly",
    "version": "1.3",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "codefiles/content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "codefiles/background.js"
        ]
    },
    "browser_action": {
        "default_icon": "w.png",
        "default_popup": "codefiles/popup.html",
        "default_title": "Click To Search For A Word!"
    }
}